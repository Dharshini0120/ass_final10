{
  "name": "user-portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/user-portal",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/user-portal"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/user-portal"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "user-portal:build",
        "dev": true,
        "port": 3000
      },
      "configurations": {
        "development": {
          "buildTarget": "user-portal:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "user-portal:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "user-portal:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{options.outputPath}"],
      "options": {
        "jestConfig": "apps/user-portal/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverageReporters": ["text"]
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/user-portal/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}